using Gtk 4.0;

template $WriteNavigation: Gtk.Box {
  orientation: vertical;

  // Note for later: versioning access could be through a stack here
  // switch from selecting a scene to seeing and reverting to any version
  ScrolledWindow {
    vexpand: true;

    child: ListView list_view {
      styles [
        "navigation-sidebar"
      ]

      factory: SignalListItemFactory factory {
        setup => $on_list_item_setup();
        bind => $on_list_item_bind();
      };
    };
  }

  Button {
    margin-end: 6;
    margin-top: 6;
    margin-start: 6;
    margin-bottom: 6;

    label: _("Add chapter");
  }
}
