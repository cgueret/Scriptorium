using Gtk 4.0;
using Adw 1;

template $ScrptWindow: Adw.ApplicationWindow {
  title: _("Scriptorium");

  content: Adw.NavigationView navigation {
    $ScrptLibraryView library_panel {}
    $ScrptEditorView editor_panel {}
  };


  ShortcutController {
    Shortcut {
      trigger: "<Ctrl>q";
      action: "action(app.quit)";
    }
    Shortcut {
      trigger: "<Ctrl>comma";
      action: "action(app.preferences)";
    }
  }
}

