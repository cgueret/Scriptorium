using Gtk 4.0;
using Adw 1;

template $SceneCard: Adw.Bin {
  accessibility {
    labelled-by: title;
    described-by: synopsis;
  }

  Box {
    valign: center;
    hexpand: true;
    margin-top: 12;
    margin-end: 12;
    margin-start: 12;
    margin-bottom: 12;

    styles [
      "header"
    ]

    Box prefixes {
      visible: false;
      margin-end: 12;

      styles [
        "prefixes",
      ]

      Image {
        styles [
          "dim-label",
        ]
        icon-name: "list-drag-handle-symbolic";
        valign: center;
      }
    }

    Box title_box {
      orientation: vertical;
      valign: center;
      hexpand: true;

      styles [
        "title",
      ]

      Label title {
        ellipsize: none;
        wrap: true;
        wrap-mode: word;
        xalign: 0;
        label: bind template.title;

        styles [
          "title",
        ]
      }

      Label synopsis {
        ellipsize: end;
        wrap: true;
        wrap-mode: word;
        xalign: 0;
        label: bind template.synopsis;
        lines: 3;

        styles [
          "dim-label",
        ]
      }

      Box entities {
        orientation: horizontal;
        halign: end;
        margin-end: 6;
      }
    }

    Box suffixes {
      visible: false;

      styles [
        "suffixes",
      ]

      Image {
        styles [
          "dim-label",
        ]
        icon-name: "right-symbolic";
        valign: center;
      }
    }
  }
}
