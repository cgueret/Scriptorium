<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>com.github.cgueret.Scriptorium</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Scriptorium</name>
  <summary>Write short stories, novels, or anything in between in an IDE for books.</summary>
  <description>
    <p>Scriptorium is a text editor coupled with a plotting tool and a formatting tool. The objective is to provide writers with a simple and complete environment to plan, plot, write and edit e-books.</p>
  </description>

  <developer id="tld.vendor">
    <name>Christophe Gueret</name>
  </developer>

  <!-- Requered: Should be a link to the upstream homepage for the component -->
  <url type="homepage">https://github.com/cgueret/Scriptorium</url>
  <!-- Recommended: It is highly recommended for open-source projects to display the source code repository -->
  <url type="vcs-browser">https://github.com/cgueret/Scriptorium</url>
  <!-- Should point to the software's bug tracking system, for users to report new bugs -->
  <url type="bugtracker">https://github.com/cgueret/Scriptorium/issues</url>
