<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="scriptorium">
	<schema id="io.github.cgueret.Scriptorium" path="/io/github/cgueret/Scriptorium/">
    <key name="window-width" type="i">
      <default>1024</default>
    </key>
    <key name="window-height" type="i">
      <default>768</default>
    </key>
    <key name="window-maximized" type="b">
      <default>false</default>
    </key>
    <key name="open-last-project" type="b">
      <default>true</default>
    </key>
    <key name="last-manuscript-name" type="s">
      <default>""</default>
    </key>
    <key name="manuscripts-folder" type="s">
      <default>""</default>
      <summary>The location for the manuscripts, defaults to user data directory</summary>
    </key>
    <key name="style-variant" type="s">
      <choices>
        <choice value="default"/>
        <choice value="light"/>
        <choice value="dark"/>
      </choices>
      <default>'default'</default>
      <summary>Style Variant</summary>
      <description>Use the light or dark variant of the GTK theme and/or GtkSourceView style scheme.</description>
    </key>
    <key name="editor-line-height" type="d">
      <default>1.2</default>
    </key>
	</schema>
</schemalist>

