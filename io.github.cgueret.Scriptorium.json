{
    "id": "io.github.cgueret.Scriptorium",
    "runtime": "org.gnome.Platform",
    "runtime-version": "48",
    "sdk": "org.gnome.Sdk",
    "command": "scriptorium",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--device=dri",
        "--socket=wayland"
    ],
    "cleanup": [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules": [
        {
            "name": "scriptorium",
            "builddir": true,
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "file:///home/cgueret/Projects/Scriptorium"
                }
            ]
        }
    ],
    "modules": [
	  "python3-ebooklib.json",
	  "python3-beautifulsoup4.json",
	  "python3-pyyaml.json",
	  "python3-GitPython.json",
	  {
	    "name": "other-modules"
	  }
     ]
}